body {
  display: flex;
  flex-flow: column;
  align-items: stretch;
  padding: 2em;
  background: #eee;
  -webkit-app-region: drag;
}

header {
  text-transform: uppercase;
  font-size: 1.5em;
  margin-bottom: .5em;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

button {
  -webkit-app-region: no-drag;
}

progress {
  width: 100%;
}

.info {
  display: flex;
  margin-top: 1em;
}

.status {
  flex: 1;
  color: #666;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: auto;
}

.details {
  margin-top: 1em;
  border: 1px solid #aaa;
  background: #fff;
  overflow-y: scroll;
  flex: 1 1 0;
  -webkit-app-region: no-drag;
}

.details ol {
  list-style: none;
  margin: 0;
  padding: 0.5em;
}

.controls {
  text-align: right;

  button {
    width: 30px;
    height: 25px;
    border: none;
    box-shadow: none;
    border-radius: 0;
    outline: none;
  }

  .close {
    background: url(/images/controls/close-window.svg);
    &:hover { background: url(/images/controls/close-window-hover.svg); }
    &:active { background: url(/images/controls/close-window-active.svg); }
  }
}
